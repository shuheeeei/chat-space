.chat-monitor__content__details
  .chat-monitor__content__details__user-name
    %p
      = message.user.name
  .chat-monitor__content__details__time
    %p
      = message.created_at.strftime("%Y/%m/%d %H:%M:%S")
  .chat-monitor__content__details__message
    - if message.content.present?
      %p
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
